@model Tuple<List<WMSPDA.Models.InventoryRealItemModel>,List<WMSPDA.Models.InventoryBillItemModel>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">

	<!--标准mui.css-->
	<link rel="stylesheet" href="~/Content/MUI/css/mui.min.css">

    <!--App自定义的css-->
	<link rel="stylesheet" type="text/css" href="~/Content/MUI/css/app.css" />

    <title>@Resources.Lang.PDA_Common_Element_InventoryDetail</title>
    	<style>
    	    .mui-control-content {
    	        background-color: white;
    	        min-height: 215px;
    	    }

    	        .mui-control-content .mui-loading {
    	            margin-top: 50px;
    	        }
    	</style>

</head>
<body>

    <header class="mui-bar mui-bar-nav">

        <button type="button" class="mui-btn mui-btn-link mui-pull-left" id="btnReturn">
		    <span class="mui-icon mui-icon-back"></span>@Resources.Lang.PDA_Common_Element_GoBack
		</button>

        <button type="button" class="mui-btn mui-btn-link mui-pull-right" id="btnMain">
	        <span class="mui-icon mui-icon-home"></span>
        </button>

		<h1 class="mui-title" style="text-decoration:underline;color:#5A98FB;">单号:@ViewBag.billCode</h1>
	</header>

	<div class="mui-content">
        <div class="mui-content-padded" style="margin: 5px;">
            <form class="mui-input-group">
                <div class="mui-input-row">
					<label>@ViewBag.UnitConfigName</label>
					<input type="text" class="mui-input-clear" id="txtPalletcode" style="ime-mode:disabled" value="@ViewBag.PalletCode" disabled="disabled" >
				</div>
                <div class="mui-input-row">
					<label>@Resources.Lang.PDA_Common_Element_CPositionCode</label>
					<input type="text" class="mui-input-clear" id="txtCpositioncode" value="@ViewBag.CpositionCode"  disabled="disabled" style="ime-mode:disabled">
				</div>
                <div class="mui-input-row">
					<label>@Resources.Lang.PDA_Common_Element_LiaoHao</label>
					<input type="text" class="mui-input-clear" id="txtCinvCode" placeholder="料号/物料条码">
				</div>
                <div class="mui-input-row">
					<label>@Resources.Lang.PDA_Common_Element_CinvName</label>
					<input type="text" class="mui-input-clear" id="txtCinvName" placeholder="品名" disabled="disabled">
				</div>
                <div class="mui-input-row">
					<label>规格型号</label>
					<input type="text" class="mui-input-clear" id="txtcspec" placeholder="" autocomplete="off"  onpaste="return false" style="ime-mode:disabled" disabled="disabled" >
			    </div>          
                <div class="mui-input-row">
					<label>@Resources.Lang.PDA_Common_Element_Quantity</label>
					<input type="text" class="mui-input-clear" id="txtQty" style="ime-mode:disabled">
			    </div>
                <div class="mui-button-row">
					<button type="button" class="mui-btn mui-btn-primary" id="btnSave" onclick="return false;" data-loading-text="保存中" data-loading-icon-position="right">@Resources.Lang.PDA_Common_Element_Save</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;
					@*NOTE by Mark, 09/25*@
                    <button type="button" class="mui-btn mui-btn-warning" id="btnSubmit" onclick="return false;" data-loading-text="确认中" data-loading-icon-position="right">@Resources.Lang.PDA_Common_Element_Complete</button> 

                    <input type="hidden" id="hdnLine" value="1" />
				</div>
            </form>
        </div>

		<div id="slider" class="mui-slider">
				<div id="sliderSegmentedControl" class="mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
					<a class="mui-control-item mui-active" href="#item1mobile">
				        @Resources.Lang.PDA_Common_Element_RealInventoryDetail
			        </a>
                    <a class="mui-control-item" href="#item2mobile">
                        @Resources.Lang.PDA_Common_Element_InventoryBillDetail
			        </a>
                    <a class="mui-control-item" href="">
			        </a>
				</div>
                <div id="sliderProgressBar" class="mui-slider-progress-bar mui-col-xs-4"></div>
				<div class="mui-slider-group">

                    <div id="item1mobile" class="mui-slider-item mui-control-content  mui-active">
						<div id="scroll1" class="mui-scroll-wrapper">
							<div class="mui-scroll">

                                <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed" id="tab1UL">

                                     @foreach (WMSPDA.Models.InventoryRealItemModel bo in Model.Item1)
                                    { 
                                        <li class="mui-table-view-cell">
		                                    <div class="mui-table mui-slider-handle">
		                                        <div class="mui-table-cell mui-col-xs-10">
		                                            <h4 class="mui-ellipsis">@bo.cinvcode</h4>
		                                            <h5>@Resources.Lang.PDA_Common_Element_CinvName:@bo.cinvname</h5>
		                                            <p class="mui-h6 mui-ellipsis">储位:@bo.cpositioncode &nbsp; 数量:@bo.quantity.ToString("f2")  </p>
		                                        </div>
		                                        <div class="mui-table-cell mui-col-xs-2 mui-text-right">
		                                            <span class="mui-h5">
                                                       
		                                            </span>
		                                        </div>
		                                    </div>
		                                </li>
                                    }
                                </ul>
							</div>
						</div>
					</div>



					<div id="item2mobile" class="mui-slider-item mui-control-content ">
						<div id="scroll2" class="mui-scroll-wrapper">
							<div class="mui-scroll">

                                <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed" id="tab2UL">

                                     @foreach (WMSPDA.Models.InventoryBillItemModel bo in Model.Item2)
                                    { 
                                        <li class="mui-table-view-cell">
		                                    <div class="mui-table mui-slider-handle">
		                                        <div class="mui-table-cell mui-col-xs-10">
		                                            <h4 class="mui-ellipsis">@bo.cinvcode</h4>
		                                            <h5>@Resources.Lang.PDA_Common_Element_CinvName:@bo.cinvname</h5>
		                                            <p class="mui-h6 mui-ellipsis">储位:@bo.cpositioncode &nbsp; 数量:@bo.quantity.ToString("f2")  </p>
		                                        </div>
		                                        <div class="mui-table-cell mui-col-xs-2 mui-text-right">
		                                            <span class="mui-h5">
                                                       
		                                            </span>
		                                        </div>
		                                    </div>
                                   
		                                </li>
                                    }
                                </ul>
							</div>
						</div>
					</div>
					
                    

				</div>
			</div>
    </div>

    <script src="~/Content/MUI/js/mui.min.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script>

        var CurrendIndex1 = 1;//Tab1当前页数

        //Tab1列表查询方法
        function SearchTab1(IsAppend) {

            if (IsAppend) {
                CurrendIndex1 = CurrendIndex1 + 1;//下一页
            }
            else {
                CurrendIndex1 = 1;//查询，第一页
            }
            //alert("SearchAsnList");
            $.ajax({
                type: "get",
                url: "/Inventory/SearchLiKuRealItems",
                data: { id: "@ViewBag.id", CurrendIndex: CurrendIndex1 },
                async: true,
                success: function (data) {
                    //mui.alert(data);
                    scrollDisabled = true;
                    if (data != null && data != undefined && data.length > 0) {
                        if (!IsAppend) {
                            $("#tab1UL").empty();
                        }
                        var liListhtml = '';
                        for (var i = 0; i < data.length; i++) {
                            liListhtml = liListhtml +
                            '<li class="mui-table-view-cell">  ' +
                            '	<div class="mui-table mui-slider-handle">  ' +
                            '		<div class="mui-table-cell mui-col-xs-10">  ' +
                            '			<h4 class="mui-ellipsis">' + data[i].cinvcode + '</h4>  ' +
                            '			<h5>@Resources.Lang.PDA_Common_Element_CinvName:' + data[i].cinvname + '</h5>  ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_CPosition:' + data[i].cpositioncode + ' &nbsp; @Resources.Lang.PDA_Common_Element_Quantity:' + data[i].quantity.toFixed(2) + '  </p>  ' +
                            '		</div>  ' +
                            '		<div class="mui-table-cell mui-col-xs-2 mui-text-right">  ' +
                            '			<span class="mui-h5">  ' +
                            '			</span>  ' +
                            '		</div>  ' +
                            '	</div>  ' +
                            '</li>  ';

                        }
                        if (IsAppend) {
                            $("#tab1UL").append(liListhtml);
                        }
                        else {
                            $("#tab1UL").html(liListhtml);
                        }

                        //重新绑定事件
                        //BindLiTap1();

                        scrollDisabled = false;
                        mui('#scroll1').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                    }
                    else {
                        //如果没有数据
                        CurrendIndex1 = CurrendIndex1 - 1;
                        scrollDisabled = true;
                        if (!IsAppend) {
                            $("#tab1UL").empty();
                        }
                        mui('#scroll1').pullRefresh().endPullupToRefresh(true);//参数为true代表没有更多数据了。
                    }
                    //注意：一定要修改Tab1的高度，否则分页后就只能显示一部分列表
                    var subHeight = $("#scroll1").children(":first").height();
                    $("#scroll1").parent(":first").height(subHeight);
                },
                error: function (msg) {
                    //alert(msg);
                    mui.alert("@Resources.Lang.PDA_Common_Tips_NetExceptionTryAgain");//网络异常，请重试!
                    mui('#scroll1').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                }
            });
        }

        //下拉加载更多数据
        function pullfreshQryTab1() {
            //业务逻辑代码，比如通过ajax从服务器获取新数据；
            //......
            //注意：
            //1、加载完新数据后，必须执行如下代码，true表示没有更多数据了：
            //2、若为ajax请求，则需将如下代码放置在处理完ajax响应数据之后
            setTimeout(SearchTab1(true), 1500);
        }

        //Tab1下拉分页
        mui('#scroll1').pullRefresh({
            up: {
                height: 100,//可选.默认50.触发上拉加载拖动距离
                auto: false,//可选,默认false.自动上拉加载一次
                contentrefresh: "@Resources.Lang.PDA_Common_Tips_Loading",//正在加载... //可选，正在加载状态时，上拉加载控件上显示的标题内容
                contentnomore: '@Resources.Lang.PDA_Common_Tips_NoMoreData',//没有更多数据了//可选，请求完毕若没有更多数据时显示的提醒内容；
                callback: pullfreshQryTab1 //必选，刷新函数，根据具体业务来编写，比如通过ajax从服务器获取新数据；
            }
        });

        var CurrendIndex2 = 1;//Tab2当前页数

        //Tab1列表查询方法
        function SearchTab2(IsAppend) {

            if (IsAppend) {
                CurrendIndex2 = CurrendIndex2 + 1;//下一页
            }
            else {
                CurrendIndex2 = 1;//查询，第一页
            }
            //alert("SearchAsnList");
            $.ajax({
                type: "get",
                url: "/Inventory/SearchLiKuBillItems",
                data: { id: "@ViewBag.id", CurrendIndex: CurrendIndex2 },
                async: true,
                success: function (data) {
                    //mui.alert(data);
                    scrollDisabled = true;
                    if (data != null && data != undefined && data.length > 0) {
                        if (!IsAppend) {
                            $("#tab2UL").empty();
                        }
                        var liListhtml = '';
                        for (var i = 0; i < data.length; i++) {
                            liListhtml = liListhtml +
                            '<li class="mui-table-view-cell">  ' +
                            '	<div class="mui-table mui-slider-handle">  ' +
                            '		<div class="mui-table-cell mui-col-xs-10">  ' +
                            '			<h4 class="mui-ellipsis">' + data[i].cinvcode + '</h4>  ' +
                            '			<h5>@Resources.Lang.PDA_Common_Element_CinvName:' + data[i].cinvname + '</h5>  ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_CPosition:' + data[i].cpositioncode + ' &nbsp; @Resources.Lang.PDA_Common_Element_Quantity:' + data[i].quantity.toFixed(2) + '  </p>  ' +
                            '		</div>  ' +
                            '		<div class="mui-table-cell mui-col-xs-2 mui-text-right">  ' +
                            '			<span class="mui-h5">  ' +
                            '			</span>  ' +
                            '		</div>  ' +
                            '	</div>  ' +
                            '</li>  ';

                        }
                        if (IsAppend) {
                            $("#tab2UL").append(liListhtml);
                        }
                        else {
                            $("#tab2UL").html(liListhtml);
                        }

                        scrollDisabled = false;
                        mui('#scroll2').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                    }
                    else {
                        //如果没有数据
                        CurrendIndex1 = CurrendIndex1 - 1;
                        scrollDisabled = true;
                        if (!IsAppend) {
                            $("#tab2UL").empty();
                        }
                        mui('#scroll2').pullRefresh().endPullupToRefresh(true);//参数为true代表没有更多数据了。
                    }
                    //注意：一定要修改Tab1的高度，否则分页后就只能显示一部分列表
                    var subHeight = $("#scroll2").children(":first").height();
                    $("#scroll2").parent(":first").height(subHeight);
                },
                error: function (msg) {
                    //alert(msg);
                    mui.alert("@Resources.Lang.PDA_Common_Tips_NetExceptionTryAgain");//网络异常，请重试!
                    mui('#scroll2').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                }
            });
        }

        //下拉加载更多数据
        function pullfreshQryTab2() {
            //业务逻辑代码，比如通过ajax从服务器获取新数据；
            //......
            //注意：
            //1、加载完新数据后，必须执行如下代码，true表示没有更多数据了：
            //2、若为ajax请求，则需将如下代码放置在处理完ajax响应数据之后
            setTimeout(SearchTab2(true), 1500);
        }

        //Tab1下拉分页
        mui('#scroll2').pullRefresh({
            up: {
                height: 100,//可选.默认50.触发上拉加载拖动距离
                auto: false,//可选,默认false.自动上拉加载一次
                contentrefresh: "@Resources.Lang.PDA_Common_Tips_Loading",//正在加载... //可选，正在加载状态时，上拉加载控件上显示的标题内容
                contentnomore: '@Resources.Lang.PDA_Common_Tips_NoMoreData',//没有更多数据了//可选，请求完毕若没有更多数据时显示的提醒内容；
                callback: pullfreshQryTab2 //必选，刷新函数，根据具体业务来编写，比如通过ajax从服务器获取新数据；
            }
        });

        $(document).ready(function () {
			$("#txtPalletcode").focus();
            $("#btnReturn").bind("tap", function () {
                location.href = "/Inventory/LiKuDetail?id=@ViewBag.id";
            });

            $("#btnMain").bind("tap", function () {
                location.href = "/PDA/Main/@ViewBag.UserNo";
            });

            //栈板号回车事件 palletcode.length == 6 NOTE by Mark, 09/25
            $("#txtPalletcode").keydown(function (event) {
                if (event.keyCode == 13) {
                    var palletcode = $("#txtPalletcode").val();
                    if (palletcode.length == 17) {
                        $.ajax({
                            type: "get",
                            url: "/Inventory/CheckPalletCode",
                            dataType: "json",
                            data: { palletcode: palletcode },
                            async: false,
                            success: function (data) {
                                if (data != undefined && data != "") {
                                    if (data.Status == "0") {
                                        $("#txtCpositioncode").val(data.Info);
                                        $("#txtCinvCode").focus();
                                    } else {
                                        mui.alert(data.Info);
                                    }
                                }
                            },
                            error: function (msg) {
                                mui.alert(msg);
                            }
                        });
                    }
                    else {
                        mui.alert("@Resources.Lang.PDA_Common_Tips_PalletCodeLengthError");//栈板号长度不正确!
                        $("#txtPalletcode").val("");
                    }
                }
            });

            //料号回车事件
            $("#txtCinvCode").keydown(function (event) {
                if (event.keyCode == 13) {
                    var cinvcode = $("#txtCinvCode").val();  
                    $.ajax({
                        type: "get",
                        url: "/Inventory/GetCinvCodeBySn",
                        dataType: "json",
                        data: { cinvcode: cinvcode, id: "@ViewBag.id" },
                        async: false,
                        success: function (data) {
                            if (data != undefined && data != "") {
                                if (data.Status == "0") {
                                    $("#txtCinvName").val(data.Info);
                                    $("#txtCinvCode").val(data.TicketCode);
                                    $("#txtcspec").val(data.cspecifications);
                                    $("#txtQty").val(data.Qty);
                                    $("#txtQty").focus();
                                } else {
                                    mui.alert(data.Info, "", "", function () {
                                        $("#txtCinvCode").focus();
                                        $("#txtCinvName").val("");
                                        $("#txtCinvCode").val("");
                                        $("#txtcspec").val("");
                                        $("#txtQty").val("");
                                    });
                                   
                                }
                            }
                        },
                        error: function (msg) {
                            mui.alert(msg);
                        }
                    });
                }
            });

            $("#btnSave").bind("tap", function () {
                mui(this).button('loading');
                Save();
                setTimeout(function () {
                    mui(this).button('reset');
                }.bind(this), 1000);
            });

            $("#btnSubmit").bind("tap", function () {
                mui(this).button('loading');
                Commit();
                setTimeout(function () {
                    mui(this).button('reset');
                }.bind(this), 1000);
            });
        });

        function Save() {
            var obj = $("#txtPalletcode");
            if(obj.val().length == 0){
                mui.alert("@Resources.Lang.PDA_Common_Tips_QingShuRuPalletCode");//请输入栈板号！
                return;
            }
            var palletcode = obj.val();

            obj = $("#txtCpositioncode");
            if(obj.val().length == 0){
                mui.alert("@Resources.Lang.PDA_Common_Tips_QingShuRuPositionCode");//请输入储位编码！
                return;
            }
            var cposition = obj.val();

            obj = $("#txtCinvCode");
            if(obj.val().length == 0){
                mui.alert("@Resources.Lang.PDA_Common_Tips_NeedCinvcode");//请输入料号！
                return;
            }
            var cinvcode = obj.val();

            obj = $("#txtCinvName");
            if(obj.val().length == 0){
                mui.alert("@Resources.Lang.PDA_Common_Tips_QingShuRuCinvName");//请输入品名！
                return;
            }

            obj = $("#txtQty");
            if(obj.val().length == 0){
                mui.alert("@Resources.Lang.PDA_Common_Tips_QingShuRuQuantity");//请输入数量！
                return;
            }
            else{
                var n = /^([1-9]\d*)(\.\d{1,2})?$/;;
                var re = new RegExp(n);
                if (!re.test(obj.val())) {
                    mui.alert("@Resources.Lang.PDA_Common_Tips_QuantityGeShiError");//数量格式不正确！
                    return;
                }
            }

            var quantity = parseFloat(obj.val());

            $.ajax({
                type: "get",
                url: "/Inventory/SaveLiKuScan",
                dataType: "json",
                data: { id: "@ViewBag.id", palletcode: palletcode, cposition: cposition, cinvcode: cinvcode, quantity: quantity },
                async: false,
                success: function (data) {
                    if (data != undefined && data != "") {
                        if (data.Status == "0") {
                            mui.alert("@Resources.Lang.PDA_Common_Tips_SaveSuccess");//保存成功！
                            clearText();
                            SearchTab1(false);
							 $("#txtPalletcode").focus();
                        }
                        else {
                            mui.alert(data.Info);
                        }
                    }
                },
                error: function (msg) {
                    mui.alert("@Resources.Lang.PDA_Common_Tips_SaveScanFailed：" + msg);//保存扫描失败
                }
            });
        }

        function Commit() {
            var obj = $("#txtPalletcode");
            //if(obj.val().length == 0){
            //    mui.alert("@Resources.Lang.PDA_Common_Tips_QingShuRuPalletCode");//请输入栈板号！
            //    return;
            //}
            var palletcode = obj.val();

            $.ajax({
                type: "get",
                url: "/Inventory/ConfirmLiKuScan",
                dataType: "json",
                data: { id: "@ViewBag.id",palletcode:palletcode },
                async: false,
                success: function (data) {
                    if (data != undefined && data != "") {
                        if (data.Status == "0") {
                            mui.alert("@Resources.Lang.PDA_Common_Tips_ConfirmSuccess", "", "", function () {//确认成功！
                                location.href = "/Inventory/LiKuDetail?id=@ViewBag.id";
                            });
                        }
                        else {
                            mui.alert(data.Info);
                        }
                    }
                },
                error: function (msg) {
                    mui.alert("@Resources.Lang.PDA_Common_Tips_SaveScanFailed：" + msg);//保存扫描失败
                }
            });
        }

 
        function clearText() {
		   //$("#txtPalletcode").val("");
            //$("#txtCpositioncode").val("");
            $("#txtCinvCode").val("");
            $("#txtCinvName").val("");
            $("#txtcspec").val("");
            $("#txtQty").val("");
        }

	</script>

</body>
</html>
