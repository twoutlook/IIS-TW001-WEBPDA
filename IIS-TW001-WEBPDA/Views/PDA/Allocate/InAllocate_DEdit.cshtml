        //ajax需要完成以下验证

        //1.单据状态验证
        //2.储位验证
        function CheckPositionCode()
        {
            var positonCode = $("#txtPositionFrom").val();
            var retrunVal = "OK";
            $.ajax({
                type: "get",
                url: "/CheckData/CheckPositionCode",
                dataType: "text",
                data: { positionCode: positonCode },
                async: false,
                success: function (data) {
                    retrunVal = data;
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
            return retrunVal;
        }

        function INAssitCheckPositionDiff()
        {
            var positonCode = $("#txtPositionCode").val();
            var retrunVal = "";
            $.ajax({
                type: "get",
                url: "/CheckData/INAssitCheckPositionDiff",
                dataType: "text",
                data: { ids: "@ViewBag.ids", positionCode: positonCode },
                async: false,
                success: function (data) {
                    retrunVal = data;
                },
                error: function (msg) {
                    alert("@Resources.Lang.PDA_Common_Tips_ExceptionMessage" + msg);//异常信息：
                }
            });
            return retrunVal;
        }

        function GetPositionName()
        {
            var positonCode = $("#txtPositionCode").val();
            var retrunVal = "";
            $.ajax({
                type: "get",
                url: "/CheckData/GetPositionName",
                dataType: "text",
                data: { positionCode: positonCode },
                async: false,
                success: function (data) {
                    retrunVal = data;
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
            return retrunVal;
        }

        //3.SN验证
      

        //SN是否已存在库存中
        function CheckExistsSN() {

            var retrunVal = "";

            var sn = $("#txtSN").val();
            $.ajax({
                type: "get",
                url: "/CheckData/CheckExistsSN",
                dataType: "text",
                data: { sn: sn },
                async: false,
                success: function (data) {
                    retrunVal = data;
                },
                error: function (msg) {
                    //alert(msg);
                }
            });

            if (retrunVal == "") {
                return "";//验证通过
            }
            else {
                return retrunVal;//错误信息
            }
        }

        //检查SN中的物料是否在指引单中
        function CheckPartNumberWithINAssit() {

            var retrunVal = "";

            var sn = $("#txtSN").val();
            var cinvcode = sn.substr(0,16);
            $.ajax({
                type: "get",
                url: "/CheckData/CheckPartNumberWithINAssit",
                dataType: "text",
                data: { ids: "@ViewBag.ids", cinvcode: cinvcode },
                async: false,
                success: function (data) {
                    retrunVal = data;
                },
                error: function (msg) {
                    //alert(msg);
                }
            });

            if (retrunVal == "") {
                return "";//验证通过
            }
            else {
                return retrunVal;//错误信息
            }
        }

        //根据SN获取DateCode
        function GetDateCode()
        {
            var sn = $("#txtSN").val();
            $.ajax({
                type: "get",
                url: "/CheckData/GetDateCode",
                dataType: "text",
                data: { sn : sn },
                async: false,
                success: function (data) {
                    if (data != undefined && data != "" && data.length == 6) {
                        $("#txtDateCode").val(data);
                    }
                    else {
                        $("#txtDateCode").val("");
                    }
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
        }

        //4.物料验证

        //判断料号是否在修改，修改则不能有异动
        function CheckCinvCode() {

            var retrunVal = "";
            var partCode = $("#txtCinvCode").val();
            var sn = $("#txtSN").val();
            var snPartCode = "";

            if (sn.length == 75) {
                snPartCode = $.trim(sn.substr(7, 30));
            }
            else {
                // snPartCode = "2"+$.trim(sn.substr(0, 10));
               // snPartCode = "2" + $.trim(sn.substr(0, 10));
            }
            
            if (snPartCode!='' && snPartCode != partCode)
            {
                retrunVal = "@Resources.Lang.PDA_Common_Tips_CinvcodeSnAtypism";//料号与SN中料号不一致!
                $("#txtCinvCode").focus();
            }

            if (retrunVal == "") {
                $.ajax({
                    type: "get",
                    url: "/CheckData/CheckCinvCode",
                    dataType: "text",
                    data: { erpCode: "", idcode: "@ViewBag.cticketCode", cinvcode: partCode, bz: "0" },
                    async: false,
                    success: function (data) {
                        // data ==0,通过
                        if (data != undefined && data != "" && data != "0") {
                            retrunVal = data;
                        }
                    },
                    error: function (msg) {
                        //alert(msg);
                    }
                });
            }
            return retrunVal;
        }

        //5.数量验证
        //本次数量不能大于剩余数量
        function CheckQty()
        {
            var msg = "";
            var currentQty = $("#txtQty").val();//当前输入数量
            if (!isNaN(currentQty)) {
                var Qty = parseFloat(currentQty);
                var TotalQty = GetAllocateCount();//总数量
                var LessQty = GetINAllocateCount();//已经上架数量
                if (Qty > (TotalQty - LessQty)) {
                    msg = "@Resources.Lang.PDA_Common_Tips_ThisQuantityExceedSurplusQuantity";//本次数量超过剩余数量!
                }
                var sn = $("#txtSN").val();
                if (sn.length == 50) {
                    var snQty = $.trim(sn.substr(43, 7));
                    if (currentQty != snQty) {
                        msg = "@Resources.Lang.PDA_Common_Tips_ThisQuantityAtypism";//本次数量与SN中的数量不一致!
                    }
                }
                //else {
                //    if (currentQty != "1")
                //    {
                //        msg = "本次数量与SN中的数量不一致!";
                //    }
                //}
            }
            return msg;
        }

        //获取调拨单总数量
        function GetAllocateCount()
        {
            var retrunVal = "";
            var partCode = $("#txtCinvCode").val();
            $.ajax({
                type: "get",
                //url: "/CheckData/GetAssitCount",
                url: "/CheckData/GetAllocateCount",
                dataType: "text",
                data: { cticketcode: "@ViewBag.cticketCode", cinvcode: partCode },
                async: false,
                success: function (data) {
                    if (data != undefined) {
                        retrunVal = data;
                    }
                    else {
                        retrunVal = "0";
                    }
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
            return parseFloat(retrunVal);
        }

        //根获取已调拨的总数量
        function GetINAllocateCount() {
            var retrunVal = "";
            var partCode = $("#txtCinvCode").val();
            $.ajax({
                type: "get",
                url: "/CheckData/GetINAllocateCount",
                dataType: "text",
                data: { cticketcode: "@ViewBag.cticketCode", cinvcode: partCode },
                async: false,
                success: function (data) {
                    if (data != undefined ) {
                        retrunVal = data;
                    }
                    else {
                        retrunVal = "0";
                    }
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
            return parseFloat(retrunVal);
        }

        //SN格式验证
        function CheckSN(isShow)
        {
            var sn = $("#txtSN").val();
            var msg = "";
            var partCode = "";
            var snqty = "";
            $.ajax({
                type: "get",
                url: "/CheckData/CheckSNAndGetInfo",
                dataType: "json",
                data: { sn: sn },
                async: false,
                success: function (data) {
                    if (data != undefined && data != "") {
                        if (data.ReturnValue == "0") {
                            if (data.cinvcode != "") partCode = data.cinvcode;
                            if (data.datecode != "") $("#txtDateCode").val(data.datecode);

                        } else {
                            msg =data.ErrorMsg;
                            $("#txtSN").focus();
                        }
                    }
                },
                error: function (msg) {
                    mui.alert(msg);
                }
            });
            if (isShow) {
                $("#txtCinvCode").val(partCode);
                //$("#txtQty").val(snqty);
            }
            return msg;
        }

        //页面加载
        function pageLod()
        {
            //alert('测试1');
            //根据指引单号获取当前单据下要上架的料号和储位
            $.ajax({
                type: "get",
                url: "/PDA/ScanInAllocateInfo",
                dataType: "json",
                data: { cticketcode: "@ViewBag.cticketCode", ids: "@ViewBag.ids" },
                async: false,
                success: function (data) {
                    //alert('测试2=' + JSON.stringify(data));
                    //mui.alert(data);
                    if (data != undefined && data.CINVCODE != "" && data.CINVCODE.length > 0)
                    {
                        var bo = data;
                        //alert(bo.CPOSITIONCODE);

                        $("#txtPositionFrom").val(bo.CPOSITIONCODE);
                      //  $("#txtPostionName").val(bo.cPosition);
                        $("#txtCinvCode").val(bo.CINVCODE);
                        $("#txtPostionTo").val(bo.CTOPOSITIONCODE);
                       // $("#txtGG").val(bo.cspecifications);
                        //var TotalQty = GetAllocateCount();//总数量
                        //var LessQty = GetINAllocateCount();//已经上架数量
                        
                        $("#txtIDS").val(bo.IDS);
                        //$("#txtTotalQty").val(TotalQty);
                        $("#txtTotalQty").val(bo.IQUANTITY);
                        //$("#txtLessQty").val(TotalQty - LessQty);
                        $("#txtLessQty").val(bo.SYnum);
                        $("#txtQty").val(bo.SYnum);

                        $("#btnSubmit").attr("disabled", true);
                        $("#btnSave").removeAttr("disabled");
                    }
                    else {
                        $("#btnSave").attr("disabled", true);
                        $("#btnSubmit").removeAttr("disabled");

                        mui.alert("@Resources.Lang.PDA_Common_Tips_ScanComplete");//扫描已经完成，请点击完成!
                    }
                },
                error: function (msg) {
                    //alert(msg);
                }
            });
        }

        //保存
        function Save()
        {
            var emptVal = $("#txtPositionCode").val();
            if (emptVal == ""){
                mui.toast("@Resources.Lang.PDA_Common_Tips_QingShuRuPositionCode");//请输入储位编码！
                $("#txtPositionCode").focus();
                return;
            }

            emptVal = $("#txtSN").val();
            if (emptVal == "") {
                mui.toast("@Resources.Lang.PDA_Common_Tips_QingShuRuSN");//请输入S/N！
                $("#txtSN").focus();
                return;
            }

            emptVal = $("#txtCinvCode").val();
            if (emptVal == "") {
                mui.toast("@Resources.Lang.PDA_Common_Tips_NeedCinvcode");//请输入料号！
                $("#txtCinvCode").focus();
                return;
            }

            emptVal = $("#txtQty").val();
            if (emptVal == "") {
                mui.toast("@Resources.Lang.PDA_Common_Tips_QingShuRuThisQuantity");//请输入本次数量！
                $("#txtQty").focus();
                return;
            }
            else {
                if (isNaN(emptVal)) {
                    mui.toast("@Resources.Lang.PDA_Common_Tips_BenCiQuantityNotShuZi");//本次数量不是数字！
                    $("#txtQty").focus();
                    return;
                }
            }
            //mui.toast("储位验证");
            //储位验证
            var msg = CheckPositionCode();
            if (msg != "OK") {
                mui.alert(msg);
                return;
            }
            //mui.toast("SN格式验证");
            //SN格式验证
            msg = CheckSN(false);
            if (msg != "") {
                mui.alert(msg);
                return;
            }
            //mui.toast("SN是否已存在库存中");
            //SN是否已存在库存中
            //msg = CheckExistsSN();
            //if (msg != "") {
            //    mui.alert(msg);
            //    return;
            //}
            //mui.toast("检查SN中的物料是否在指引单中");
            //检查SN中的物料是否在指引单中
            //msg = CheckPartNumberWithINAssit();
            //if (msg != "") {
            //    mui.alert(msg);
            //    return;
            //}
            //mui.toast("判断料号是否在修改，修改则不能有异动");
            //判断料号是否在修改，修改则不能有异动
            msg = CheckCinvCode();
            //alert(msg);
            if (msg != "") {
                mui.alert(msg);
                return;
            }
            //mui.toast("数量验证");
            //数量验证
            msg = CheckQty();
            if (msg != "") {
                mui.alert(msg);
                return;
            }
            //验证通过，保存数据
            var strSN = $("#txtSN").val();
            var pcodeFrom = $("#txtPositionFrom").val();
            var pcodeTo = $("#txtPostionTo").val();
            var dc = $("#txtDateCode").val();
            var cinvCode = $("#txtCinvCode").val();
            var qty = $("#txtQty").val();
            var ids = $("#txtIDS").val();
               
            //mui.toast("开始保存");
            //alert("开始保存@ViewBag.cticketCode");
            $.ajax({
                type: "get",
                url: "/PDA/INAllocateSave",
                dataType: "json",
                data: {
                    allocateCode: "@ViewBag.cticketCode",
                    ids: ids,
                    vCinvcode: cinvCode,
                    cpositioncodeFrom: pcodeFrom,
                    cpositioncodeTo: pcodeTo,
                    strSN: strSN,
                    strDateCode: dc,
                    vQty: qty,
                    pBZ: "0"
                },
                async: false,
                success: function (data) {

                    if (data != undefined && data != "") {

                        if (data.Info == "") {
                            mui.alert("@Resources.Lang.PDA_Common_Tips_SaveSuccess");//保存成功！
                            clearText();
                            pageLod();
                        }
                        else {
                            mui.alert("@Resources.Lang.PDA_Common_Tips_SaveFailed" + data.Info);//保存失败：
                        }
                    }
                    else {
                       
                    }
                },
                error: function (msg) {
                    //alert(msg);
                }
            });

        }

        function clearText()
        {
            $("#txtSN").val("");
            $("#txtPositionFrom").val("");
            $("#txtPostionTo").val("");           
            $("#txtDateCode").val("");
            $("#txtCinvCode").val("");
           // $("#txtCinvName").val("");
            //$("#txtGG").val("");
            $("#txtTotalQty").val("");
            $("#txtLessQty").val("");
            $("#txtQty").val("");
        }

        function SubmitCase()
        {

            $.ajax({
                type: "get",
                url: "/PDA/INAllocateSubmit",
                dataType: "json",
                data: { allocateCode: "@ViewBag.cticketCode", ids: "@ViewBag.ids" },
