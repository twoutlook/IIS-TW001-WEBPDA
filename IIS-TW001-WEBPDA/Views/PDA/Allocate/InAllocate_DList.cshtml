                                    }
                                </ul>

							
							</div>
						</div>
					</div>
					<div id="item2mobile" class="mui-slider-item mui-control-content">
						<div id="scroll2" class="mui-scroll-wrapper">
							<div class="mui-scroll">
								<ul class="mui-table-view mui-table-view-striped mui-table-view-condensed" id="tab2UL">

                                    @foreach (WMSPDA.Model.V_PDA_STOCK_ALLO_SCAN_D bo in Model.Item2)
                                    { 
                                
                                        <li class="mui-table-view-cell" >
                                             <div class="mui-slider-right mui-disabled" >
				                                <a class="mui-btn mui-btn-red">@Resources.Lang.PDA_Common_Element_Delete</a>
                                                   <input type="hidden" class="hdnids2" value="@bo.ID" />
			                                 </div>
		                                    <div class="mui-table mui-slider-handle">
		                                        <div class="mui-table-cell mui-col-xs-10">
		                                            <h4 class="mui-ellipsis">@bo.CINVCODE</h4>
		                                            <h5>S/N:@bo.CSN</h5>
		                                            <p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_Quantity:@bo.IQUANTITY &nbsp; DateCode:@bo.CDATECODE  </p>
                                                    <p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_OldPosition:@bo.CPOSITIONCODE &nbsp; @Resources.Lang.PDA_Common_Element_ObjectivePosition:@bo.CTOPOSITIONCODE  </p>
		                                        </div>
		                                        <div class="mui-table-cell mui-col-xs-2 mui-text-right">
		                                            <span class="mui-h5">
