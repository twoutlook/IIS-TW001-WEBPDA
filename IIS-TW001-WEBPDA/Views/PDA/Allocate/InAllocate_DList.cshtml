		</div>

        <script src="~/Content/MUI/js/mui.min.js"></script>
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Content/MUI/js/mui.picker.js"></script>
        <script src="~/Content/MUI/js/mui.poppicker.js"></script>
    <script>

        var CurrendIndex1 = 1;//Tab1当前页数
        var CurrendIndex2 = 1;//Tab2当前页数
        var CurrendIndex3 = 1;//Tab3当前页数

        //Tab1列表查询方法
        function SearchTab1(IsAppend) {
            //debugger;
            //查询事件

            if (IsAppend) {
                CurrendIndex1 = CurrendIndex1 + 1;//下一页
            }
            else {
                CurrendIndex1 = 1;//查询，第一页
            }
            //alert("SearchAsnList");
            $.ajax({
                type: "get",
                url: "/PDA/INAllocateSearchTab1",
                data: { cticketcode: "@ViewBag.CticketCode", CurrendIndex: CurrendIndex1 },
                async: true,
                success: function (data) {
                    //mui.alert(data);
                    scrollDisabled = true;
                    if (data != null && data != undefined && data.length > 0) {
                        if (!IsAppend) {
                            $("#tab1UL").empty();
                        }
                        var liListhtml = '';
                        for (var i = 0; i < data.length; i++) {
                            var ymd = Getmmdd(data[i].DCREATETIME);
                            liListhtml = liListhtml +
                            ' <li class="mui-table-view-cell" > ' +
                            '	<div class="mui-table">        ' +
                            '		<div class="mui-table-cell mui-col-xs-10">     ' +
                            '			<h4 class="mui-ellipsis">@Resources.Lang.PDA_Common_Element_LiaoHao：' + data[i].CINVCODE + '</h4> ' +
                            '			<h5> @Resources.Lang.PDA_Common_Element_SurplusQuantity:' + data[i].SYnum + ' &nbsp; @Resources.Lang.PDA_Common_Element_Emergency:' + data[i].CRITICAL_PART + '</h5>                      ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_Quantity:' + data[i].IQUANTITY + ' &nbsp; @Resources.Lang.PDA_Common_Element_HasAllocateQuantity:' + data[i].YJnum + '  </p> ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_OldPosition:' + data[i].CPOSITIONCODE + ' &nbsp; @Resources.Lang.PDA_Common_Element_ObjectivePosition:' + data[i].CTOPOSITIONCODE + '  </p> ' +
                            '		</div>                                         ' +
                            '		<div class="mui-table-cell mui-col-xs-2 mui-text-right">  ' +
                            '			<span class="mui-h5">  ' +
                            //'				' + data[i].cticketcode + '    ' +
                            '				<input  name="hdnIDS" type="hidden" value="' + data[i].IDS + '" /> ' +
                            '				<input  name="CINVCODE" type="hidden" value="' + data[i].CINVCODE + '" /> ' +
                            '			</span>  ' +
                            '		</div>       ' +
                            '	</div>           ' +
                            ' </li> ';

                        }
                        if (IsAppend) {
                            $("#tab1UL").append(liListhtml);
                        }
                        else {
                            $("#tab1UL").html(liListhtml);
                        }
                        //重新绑定事件
                        BindLiTap1();
                        scrollDisabled = false;
                        mui('#scroll1').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                    }
                    else {
                        //如果没有数据
                        CurrendIndex1 = CurrendIndex1 - 1;
                        scrollDisabled = true;
                        if (!IsAppend) {
                            $("#tab1UL").empty();
                        }
                        mui('#scroll1').pullRefresh().endPullupToRefresh(true);//参数为true代表没有更多数据了。
                    }
                    //注意：一定要修改Tab1的高度，否则分页后就只能显示一部分列表
                    var subHeight = $("#scroll1").children(":first").height();
                    $("#scroll1").parent(":first").height(subHeight);
                },
                error: function (msg) {
                    //alert(msg);
                    mui.alert("@Resources.Lang.PDA_Common_Tips_NetExceptionTryAgain");//网络异常，请重试!
                    mui('#scroll1').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                }
            });
        }

        //Tab2列表查询方法
        function SearchTab2(IsAppend) {
            //debugger;
            //查询事件

            if (IsAppend) {
                CurrendIndex2 = CurrendIndex2 + 1;//下一页
            }
            else {
                CurrendIndex2 = 1;//查询，第一页
            }
            //alert("SearchAsnList");
            $.ajax({
                type: "get",
                url: "/PDA/INAllocateSearchTab2",
                data: { cticketcode: "@ViewBag.CticketCode", CurrendIndex: CurrendIndex2 },
                async: true,
                success: function (data) {
                    //mui.alert(data);
                    scrollDisabled = true;
                    if (data != null && data != undefined && data.length > 0) {
                        if (!IsAppend) {
                            $("#tab2UL").empty();
                        }
                        var liListhtml = '';
                        for (var i = 0; i < data.length; i++) {
                            var ymd = Getmmdd(data[i].DCREATETIME);
                            liListhtml = liListhtml +
                            '<li class="mui-table-view-cell" >  ' +
                            '	<div class="mui-table">  ' +
                             '	<div class="mui-slider-right mui-disabled">  ' +
                            '		<a class="mui-btn mui-btn-red">@Resources.Lang.PDA_Common_Element_Delete</a>  ' +
                            '       <input type="hidden" class="hdnids2" value="' + data[i].ID + '" /> ' +
                            '	</div>  ' +
                            '		<div class="mui-table-cell mui-col-xs-10">  ' +
                            '			<h4 class="mui-ellipsis">' + data[i].CINVCODE + '</h4>  ' +
                            '			<h5>S/N:' + data[i].CSN + '</h5>  ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_Quantity:' + data[i].IQUANTITY + ' &nbsp; DateCode:' + data[i].CDATECODE + '  </p>  ' +
                            '			<p class="mui-h6 mui-ellipsis">@Resources.Lang.PDA_Common_Element_OldPosition:' + data[i].CPOSITIONCODE + ' &nbsp; @Resources.Lang.PDA_Common_Element_ObjectivePosition:' + data[i].CTOPOSITIONCODE + '  </p>  ' +
                            '		</div>  ' +
                            '		<div class="mui-table-cell mui-col-xs-2 mui-text-right">  ' +
                            '			<span class="mui-h5">     ' +
                            '				<input  name="hdnID3" type="hidden" value="' + data[i].ID + '" /> ' +
                            '			</span>  ' +
                            '		</div>  ' +
                            '	</div>  ' +
                            '</li>  ';

                        }
                        if (IsAppend) {
                            $("#tab2UL").append(liListhtml);
                        }
                        else {
                            $("#tab2UL").html(liListhtml);
                        }
                        //重新绑定事件
                        //BindLiTap3();
                        scrollDisabled = false;
                        mui('#scroll2').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                    }
                    else {
                        //如果没有数据
                        CurrendIndex2 = CurrendIndex2 - 1;
                        scrollDisabled = true;
                        if (!IsAppend) {
                            $("#tab2UL").empty();
                        }
                        mui('#scroll2').pullRefresh().endPullupToRefresh(true);//参数为true代表没有更多数据了。
                    }
                    //注意：一定要修改Tab1的高度，否则分页后就只能显示一部分列表
                    var subHeight = $("#scroll2").children(":first").height();
                    $("#scroll2").parent(":first").height(subHeight);
                },
                error: function (msg) {
                    //alert(msg);
                    mui.alert("@Resources.Lang.PDA_Common_Tips_NetExceptionTryAgain");//网络异常，请重试!
                    mui('#scroll2').pullRefresh().endPullupToRefresh(false);//参数为true代表没有更多数据了。
                }
            });
        }

       

        //下拉加载更多数据
        function pullfreshQryTab1() {
            //业务逻辑代码，比如通过ajax从服务器获取新数据；
            //......
            //注意：
            //1、加载完新数据后，必须执行如下代码，true表示没有更多数据了：
            //2、若为ajax请求，则需将如下代码放置在处理完ajax响应数据之后
            setTimeout(SearchTab1(true), 1500);
        }
        function pullfreshQryTab2() {
            //业务逻辑代码，比如通过ajax从服务器获取新数据；
            //......
            //注意：
            //1、加载完新数据后，必须执行如下代码，true表示没有更多数据了：
            //2、若为ajax请求，则需将如下代码放置在处理完ajax响应数据之后
            //mui.alert("SearchTab2");
            setTimeout(SearchTab2(true), 1500);
        }
       
        //格式化json日期
        function Getmmdd(str) {
            var ymd = '';
            //str='/Date(1525795200000)/';
            if (str != undefined) {
                str = str.replace("/Date(", "").replace(")/", "");
                var date = new Date(parseFloat(str));
                //var year = date.getFullYear();
                var month = (date.getMonth() + 1) + '';
                if (month.length == 1) {
                    month = "0" + month;
                }
                var strDate = (date.getDate()) + '';
                if (strDate.length == 1) {
                    strDate = '0' + strDate;
                }
                ymd = month + "-" + strDate;
                //ymd = str;
            }
            return ymd;
        }

        //Tab1下拉分页
        mui('#scroll1').pullRefresh({
            up: {
                height: 100,//可选.默认50.触发上拉加载拖动距离
                auto: false,//可选,默认false.自动上拉加载一次
                contentrefresh: "@Resources.Lang.PDA_Common_Tips_Loading",//正在加载... //可选，正在加载状态时，上拉加载控件上显示的标题内容
                contentnomore: '@Resources.Lang.PDA_Common_Tips_NoMoreData',//没有更多数据了//可选，请求完毕若没有更多数据时显示的提醒内容；
                callback: pullfreshQryTab1 //必选，刷新函数，根据具体业务来编写，比如通过ajax从服务器获取新数据；
            }
        });

        //Tab2下拉分页
        mui('#scroll2').pullRefresh({
            up: {
                height: 100,//可选.默认50.触发上拉加载拖动距离
                auto: false,//可选,默认false.自动上拉加载一次
                contentrefresh: "@Resources.Lang.PDA_Common_Tips_Loading",//正在加载... //可选，正在加载状态时，上拉加载控件上显示的标题内容
                contentnomore: '@Resources.Lang.PDA_Common_Tips_NoMoreData',//没有更多数据了//可选，请求完毕若没有更多数据时显示的提醒内容；
                callback: pullfreshQryTab2 //必选，刷新函数，根据具体业务来编写，比如通过ajax从服务器获取新数据；
            }
        });

      
        $(document).ready(function () {
            BindLiTap1();
            BindLiTap3();

            $("#btnReturn").bind("tap", function () {
                location.href = "/PDA/InAllocateList/@ViewBag.UserNo";
            });

            $("#btnMain").bind("tap", function () {
                location.href = "/PDA/Main/@ViewBag.UserNo";
            });

            

        });

        //绑定Tab1选择事件
        function BindLiTap1() {
            $("#tab1UL").children().bind("tap", function () {
                var ids = $(this).find("input:hidden[name=hdnIDS]").val();
                var cinvcode = $(this).find("input:hidden[name=CINVCODE]").val();
                location.href = "/PDA/InAllocate_DEdit/@ViewBag.st/@ViewBag.CticketCode/" + cinvcode;
            });
        }

        //绑定Tab3删除事件
        function BindLiTap3() {

            $('.mui-scroll-wrapper').scroll({
                indicators: true //是否显示滚动条
            });

            var btnArray = ['@Resources.Lang.PDA_Common_Element_Button_Confirm', '@Resources.Lang.PDA_Common_Element_Button_Cancel'];

            $('#tab2UL').on('tap', '.mui-btn', function (event) {
                var elem = this;
                var li = elem.parentNode.parentNode;
                mui.confirm('@Resources.Lang.PDA_Common_Tips_DeleteConfirm', 'Hello MUI', btnArray, function (e) {//确认删除该条记录？
                   
                    if (e.index == 0) {
                        var hdnIds = $(li).find(".hdnids2").val();
                        //alert(hdnIds);
                        //ajax后台删除明细
                        $.ajax({
                            type: "get",
                            url: "/PDA/DeleteTempAllocate_D",
                            data: { ids: hdnIds },
                            async: true,
                            success: function (data) {
                                if (data.Status == "0") {
                                    li.parentNode.removeChild(li);
                                    SearchTab1(false);
                                }
                                else {
                                    mui.alert(data.Info);
                                }
                            },
                            error: function (msg) {
                                //alert(msg);
                                mui.alert("@Resources.Lang.PDA_Common_Tips_NetExceptionTryAgain");//网络异常，请重试!
                               
                            }
                          });
                        

                    } else {
                        setTimeout(function () {
                            $.swipeoutClose(li);
                        }, 0);
                    }
                });
            });
        }


	</script>

</body>
</html>
